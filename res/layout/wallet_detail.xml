<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/fundDetailTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:text="Wallet Management"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/White"
        android:textSize="45sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/fundDetailYen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/fundDetailInput"
        android:layout_toRightOf="@+id/fundDetailInput"
        android:text="円"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/White"
        android:textSize="35sp" />

    <Spinner
        android:id="@+id/fundDetailSpinner3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fundDetailSubTitle3"
        android:layout_centerHorizontal="true"
        android:entries="@array/fundDetailSpinner3"
        android:tag="spinner3" />

    <TextView
        android:id="@+id/fundDetailSubTitle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/fundDetailSubTitle1"
        android:layout_alignBottom="@+id/fundDetailSubTitle1"
        android:layout_alignParentRight="true"
        android:text="現金or預金"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/White"
        android:textSize="30sp" />

    <Spinner
        android:id="@+id/fundDetailSpinner2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/fundDetailSubTitle1"
        android:entries="@array/fundDetailSpinner2"
        android:tag="spinner2" />

    <Spinner
        android:id="@+id/fundDetailSpinner1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/fundDetailSubTitle1"
        android:entries="@array/fundDetailSpinner1"
        android:tag="spinner1" />

    <Button
        android:id="@+id/fundDetailButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fundDetailCommentInput"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:tag="detailRegister"
        android:text="登録"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/fundDetailSubTitle3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fundDetailSpinner2"
        android:layout_centerHorizontal="true"
        android:text="カテゴリ選択"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/White"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/fundDetailInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fundDetailSpinner3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:ems="5"
        android:gravity="center_vertical|right"
        android:inputType="number"
        android:textSize="25sp" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/fundDetailSubTitle4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fundDetailInput"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="コメント"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/White"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/fundDetailCommentInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/fundDetailSubTitle4"
        android:ems="10"
        android:inputType="text"
        android:tag="edit"
        android:text=" " />

    <TextView
        android:id="@+id/fundDetailDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fundDetailTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:tag="detailDate"
        android:text="2013/3/14"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/White"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/fundDetailSubTitle1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/fundDetailDate"
        android:layout_marginTop="20dp"
        android:text="収入or支出"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/White"
        android:textSize="30sp" />

</RelativeLayout>